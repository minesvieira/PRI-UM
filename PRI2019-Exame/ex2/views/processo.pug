extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-amber
                h1.w3-center= "Informações sobre o processo "
            .w3-container
                label="Tipo: " + dados.tipo
                p
                label="Número: " + dados.numero
                p
                label="Sumário: " + dados.sumario
                p
                label="Id" + dados.id
                p
                hr
            if dados.length > 0
                .w3-container
                    h3.w3-center Processo
                    table.w3-table-all.w3-centered
                        tr
                            th id
                            th Tipo
                            each p in dados
                                tr.w3-light-gray
                                    td=p.id
                                    td=p.tipo
                                    td
                                        form(action="/processos/"+p.id)
                                            button(type='submit' class="fas fa-eye" style="color: white; padding: 22px 22px; border-radius: 8px;").w3-hover-amber
                    hr
            .w3-container.w3-center
                button(type='button' style="color: #FFBF00; padding: 22px 22px; border-radius: 8px; " onclick="javascript:history.go(-1) ").w3-hover-amber.w3-center    Voltar
            .w3-container
                form(action="/").w3-center
                    button(type='submit' class="fa fa-home" style="color: #FFBF00; padding: 22px 22px; border-radius: 8px;").w3-hover-amber    Página Inicial
            footer.w3-container.w3-amber

            footer.w3-container.w3-amber
