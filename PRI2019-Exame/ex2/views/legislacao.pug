extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-amber
                h1.w3-center= "Informações sobre o diploma " + dados.numero
            .w3-container
                label="Data: " + dados.data
                p
                label="Número: " + dados.numero
                p
                label="Tipo: " + dados.tipo
                p
                label="Sumário: " + dados.sumario
                p
                label="Estado: " + dados.estado
                p
                label="Link: " + dados.link
                p
                form(action="/entidades/"+dados.entidades) Entidades
                p
                hr
            if processos.length > 0
                .w3-container
                    h3.w3-center Lista de Processos pertencentes ao Diploma
                    table.w3-table-all.w3-centered
                        tr
                            th Codigo
                            th Titulo
                            th Id
                            each p in processos
                                tr.w3-light-gray
                                    td=p.codigo
                                    td=p.titulo
                                    td
                                        form(action="/processos/"+p.id)
                                            button(type='submit' class="fas fa-eye" style="color: white; padding: 22px 22px; border-radius: 8px;").w3-hover-amber
                    hr
            .w3-container
                form(action="/").w3-center
                    button(type='submit' class="fa fa-home" style="color: #FFBF00; padding: 22px 22px; border-radius: 12px;").w3-hover-amber    Página Inicial
            footer.w3-container.w3-amber
