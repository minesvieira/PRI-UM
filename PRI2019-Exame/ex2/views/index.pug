extends layout

block content
  h1 Aplicação da API CLAV 
  h2 Teste de Recurso de Processamento e Representação de Informação
  .w3-card-4
    header.w3-container.w3-blue
      h1 Lista de Diplomas
    .w3-container
      table.w3-table-all
          tr.w3-hover-blue
            th Data
            th Tipo
            th Número
            th Sumário
            th Id
          each diploma in diplomas
            tr.w3-hover-blue
              td= diploma.data
              td= diploma.tipo
              td= diploma.numero
              td= diploma.sumario
              td
                a(href="/" + diploma.id) 
                  =diploma.id
    footer.w3-container.w3-blue
      address Generated by PRI2019
