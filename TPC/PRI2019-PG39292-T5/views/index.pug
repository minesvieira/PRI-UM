extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-red
                h4 Insira um Aluno
            .w3-container
                form.w3-container(action='/alunos' method='POST')
                    label.w3-red
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='identificador')
                    label.w3-red
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label.w3-red
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    input.w3-btn.w3-blue-grey(type='submit' value='Adicionar')
        .w3-card-4
            header.w3-container.w3-red
                h4 Lista de Alunos
            .w3-container
                table.w3-table-all
                    tr
                        th Identificador
                        th Nome
                        th Curso
                        th Notas
                        th 
                    each i in lista
                        tr
                            td= i.identificador
                            td= i.nome
                            td= i.curso
                            td
                                form.w3-container(action=`/alunos/${i.identificador}` method='GET')
                                    input.w3-btn.w3-border.w3-blue-grey(type='submit' value='Notas')
                            td
                                button.w3-button.w3-border.w3-blue-grey(onclick="apagaAluno('" + i.identificador + "')") Apagar
            footer.w3-container.w3-red
