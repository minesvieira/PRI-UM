extends layout

block content
    .w3-container
        h1 Lista de Filmes 
        a(style='color:red' class='w3-bar-item w3-button' href='/filmes/inserir') Criar novo filme
        table.w3-table-all 
            tr 
                th Id
                th Titulo
                th Year
            each filme in lista 
                tr 
                    td= filme._id
                    td= filme.title
                    td= filme.year
                    td 
                        button.w3-button(style='color:green' onclick="verMais('" + filme._id +"')") Ver Mais
                    td 
                        button.w3-button(style='color:red' onclick="apagar('" + filme._id +"')") Apagar